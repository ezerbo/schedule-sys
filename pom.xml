	<modelVersion>4.0.0</modelVersion>
	<groupId>com.rj.healthcare</groupId>
	<artifactId>schedule-sys</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>war</packaging>

	<developers>
		<developer>
			<name>Boureima Edouard ZERBO</name>
